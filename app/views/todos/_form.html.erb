<li id="<%= dom_id todo %>" class="editing">
  <%= form_for todo, data: { controller: 'submitable reloader', action: "keydown.esc->reloader#reload" } do |form| %>
    <%= form.text_field :title,
      required: true,
      class: 'edit',
      data: {
        controller: 'input-focus',
        action: 'blur->submitable#submit'
      }
    %>
  <% end %>
</li>
