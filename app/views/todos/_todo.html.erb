<li id="<%= dom_id todo %>" class="<%= 'completed' if todo.completed %>">
  <div class="view">
    <%= form_for todo do |form| %>
      <%= form.check_box :completed, class: "toggle", onchange: "this.form.requestSubmit()" %>
    <% end %>
    <label><%= todo.title %></label>
    <%= button_to('', todo, method: :delete, class: 'destroy') %>
  </div>
</li>
