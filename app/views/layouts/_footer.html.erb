<footer class="footer">
  <span class="todo-count"><%= t '.items_left_html', count: Todo.active.count %></span>
  <ul class="filters">
    <li><%= link_to 'All', todos_path, class: filter_class(nil) %></li>
    <li><%= link_to 'Active', active_todos_path, class: filter_class('active') %></li>
    <li><%= link_to 'Completed', completed_todos_path, class: filter_class('completed') %></li>
  </ul>
  <% if (Todo.completed.count != 0) %>
    <%= button_to "Clear completed", "todos/completed", method: :delete, form_class: "clear-completed" %>
  <% end %>
</footer>
